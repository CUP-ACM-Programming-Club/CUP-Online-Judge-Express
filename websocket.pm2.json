{
  "name"        : "CUP Online Judge Express -- WebSocket",
  "script"      : "./dist/bin/websocket.js",
  "exec_mode"   : "fork",
  "cwd"         : "./",
  "watch": [
    "bin",
    "routers",
    "module",
    "middleware",
    "views"
  ],
  "ignore_watch" : [
    "node_modules",
    "logs",
    "static"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "error_file" : "./logs/app-err.log",
  "out_file"   : "./logs/app-out.log",
  "env": {
    "NODE_ENV": "production",
    "MODE": "websocket"
  }
}
